{
  "name": "caja-chica-bot",
  "version": "2.0.0",
  "description": "Bot de Telegram para gestiÃ³n de caja chica - Arquitectura Clean ESM-First",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "prepare": "husky"
  },
  "keywords": [
    "bot",
    "telegram",
    "caja-chica",
    "clean-architecture",
    "esm",
    "typescript"
  ],
  "author": "Havani Technologies",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@prisma/client": "^6.8.2",
    "awilix": "^10.0.0",
    "bullmq": "^5.20.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "grammy": "^1.30.0",
    "hono": "^4.6.0",
    "ioredis": "^5.4.0",
    "pino": "^9.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "mongodb": "^7.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.0",
    "prisma": "^6.8.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
